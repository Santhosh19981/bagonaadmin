<IfModule mod_rewrite.c>
  RewriteEngine On

  # Redirect all traffic to index.html if the requested file/directory doesn't exist
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
